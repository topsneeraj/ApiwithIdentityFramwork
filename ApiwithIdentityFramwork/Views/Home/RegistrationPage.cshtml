
@{
    ViewBag.Title = "RegistrationPage";
}

<h2>RegistrationPage</h2>
<div class="container">

    <div class="form-group">
        <label>
            email
        </label>
        <div>
            @Html.TextBox("email", "", new { @class = "form-control", @placeholder = "Enter Email id" })
        </div>
    </div>
    <div class="form-group">
        <label>
            Password
        </label>
        <div>
            @Html.TextBox("Password", "", new { @class = "form-control", @placeholder = "Enter Password" })
        </div>
    </div>
    <div class="form-group">
        <label>
            Confirm Password
        </label>
        <div>
            @Html.TextBox("confirm", "", new { @class = "form-control", @placeholder = "Enter confirm Password" })
        </div>
    </div>
    <div class="form-group">
      
        <div>
         <input type="button" value="Click" id="btnregister" class="btn btn-primary"/>
        </div>
    </div>
    <div class="danger alert-danger collapse small" id="divError">
        <a class="close" id="linkClose" href="#">&times;</a>
        <div id="divErrorText">
        </div>
    </div>



</div>

